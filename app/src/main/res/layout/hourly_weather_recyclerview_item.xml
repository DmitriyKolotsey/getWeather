<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/main_activity_round_layout"
        android:elevation="4dp"
        android:translationZ="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewFragmentRecyclerViewHour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/main_activity_round_layout"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageViewFragmentRecyclerViewIcons"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/main_activity_round_layout"
            app:srcCompat="@drawable/ic_clear_day" />

        <TextView
            android:id="@+id/textViewFragmentRecyclerViewWeatherDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/main_activity_round_layout"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewFragmentRecyclerViewWeatherTemperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/main_activity_round_layout"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
